<!DOCTYPE html>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12">
      <div class="card card-primary card-outline">
        <div class="card-body">

          <div class="form-row">

            <div class="form-group col-md-2">
            <label for="rcn">ID/이메일</label>
            </div>
            <div class="form-group col-md-3">
              <div class="input-group">
                <input id="email" type="text" class="form-control" value="<%= member['resp_email'] %>" placeholder="ID/이메일">
              </div>
            </div>
            <div class="form-group col-md-7"></div>

            <div class="form-group col-md-2">
            <label for="passwd">비밀번호</label>
            </div>
            <div class="form-group col-md-2">
              <div class="input-group">
                <button id="m-password" class="btn btn-default button-sm" style="float: right;">비밀번호변경</button>
              </div>
            </div>
            <div class="form-group col-md-8"></div>

            <div class="form-group col-md-2">
            <label for="rcn">이름</label>
            </div>
            <div class="form-group col-md-5">
              <div class="input-group">
                <input id="name" type="text" class="form-control" value="<%= member['resp_name'] %>" placeholder="이름">
              </div>
            </div>
            <div class="form-group col-md-5"></div>

            <div class="form-group col-md-2">
            <label for="rcn">전화번호</label>
            </div>
            <div class="form-group col-md-2">
              <div class="input-group">
                <input id="phone" type="text" class="form-control" value="<%= member['resp_phone'] %>" placeholder="전화번호">
              </div>
            </div>
            <div class="form-group col-md-8"></div>

            <div class="form-group col-md-2">
            <label for="grade">권한</label>
            </div>
            <div class="form-group col-md-10">
              <div class="input-group dropdown">
                <button id="btn-grade" class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" disabled>가맹점</button>
                <div id="dropUsed" class="dropdown-menu">
                </div>
              </div>
            </div>

            <div class="form-group col-md-2">
            <label for="bzname">사용여부</label>
            </div>
            <div class="form-group col-md-2">
              <div class="input-group">
                <div class="icheck-primary d-inline">
                  <input type="checkbox" id="used" checked disabled>
                  <label for="used">사용</label>
                </div>
              </div>
            </div>
            <div class="form-group col-md-8"></div>

          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <button id="register" class="btn btn-default" style="float: right;">저장</button>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-12">
              <div id="results"></div>
              <div id="pageid" style="display: none;">member-profile</div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="modal-password-change" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">비밀번호 변경</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-row">

          <div class="form-group col-md-3">
          <label for="passwd">비밀번호</label>
          </div>
          <div class="form-group col-md-4">
            <div class="input-group">
              <input id="m-password1" type="password" class="form-control" value="" placeholder="********">
            </div>
          </div>
          <div class="form-group col-md-5"><span id="area-comment" class="form-comment">비밀번호를 입력해주세요</span></div>

          <div class="form-group offset-md-3 col-md-4">
            <div class="input-group">
              <input id="m-password2" type="password" class="form-control" value="" placeholder="********">
            </div>
          </div>
          <div class="form-group col-md-5"><span id="m-password-comment" class="form-comment"></span></div>

        </div>
        <hr>
        <div class="form-row">
          <div class="form-group col-md-12">
            <button type="button" class="btn btn-default" style="float: left;" data-dismiss="modal">닫기</button>
            <button id="m-passwd-update" type="button" class="btn btn-default" style="float: right;">비밀번호변경</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

